---
// src/components/Header.astro
---
<header class="bg-main border-b border-gray-700">
    <div class="container mx-auto px-4">
        <nav class="flex justify-between items-center py-4">
            <a href="/" class="font-serif text-2xl font-bold text-white transition-colors hover:text-gray-200 flex items-center">angusq.com</a>
            
            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-x-6 text-sm font-medium text-white">
                <a href="/portfolio" class="link-underline-white hover:text-gray-200 flex items-center">Portfolio</a>
                <a href="/newsletter" class="link-underline-white hover:text-gray-200 flex items-center">Newsletter</a>
                <a href="/about" class="link-underline-white hover:text-gray-200 flex items-center">About</a>
                <a href="/contact" class="link-underline-white hover:text-gray-200 flex items-center">Contact</a>
            </div>

            <!-- Mobile Burger Menu Button -->
            <button id="mobile-menu-button" class="md:hidden flex flex-col justify-center items-center w-8 h-8 space-y-1.5">
                <span class="block w-6 h-0.5 bg-white transition-all duration-300 ease-out"></span>
                <span class="block w-6 h-0.5 bg-white transition-all duration-300 ease-out"></span>
                <span class="block w-6 h-0.5 bg-white transition-all duration-300 ease-out"></span>
            </button>
        </nav>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="md:hidden fixed top-0 left-0 w-full h-screen bg-white z-40 flex flex-col justify-center items-center transition-all duration-300 ease-out opacity-0 pointer-events-none">
            <!-- Close Button - positioned to match burger menu exactly -->
            <div class="absolute top-0 left-0 right-0 bg-main">
                <div class="container mx-auto px-4">
                    <div class="flex justify-end py-4">
                        <button id="mobile-menu-close" class="flex flex-col justify-center items-center w-8 h-8">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            
            <nav class="text-center space-y-8">
                <a href="/portfolio" class="block text-3xl font-serif font-bold text-gray-700 hover:text-main transition-colors">Portfolio</a>
                <a href="/newsletter" class="block text-3xl font-serif font-bold text-gray-700 hover:text-main transition-colors">Newsletter</a>
                <a href="/about" class="block text-3xl font-serif font-bold text-gray-700 hover:text-main transition-colors">About</a>
                <a href="/contact" class="block text-3xl font-serif font-bold text-gray-700 hover:text-main transition-colors">Contact</a>
            </nav>
        </div>
    </div>
</header>

<script>
    // Mobile menu toggle functionality
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuClose = document.getElementById('mobile-menu-close');
        const menuLines = mobileMenuButton?.querySelectorAll('span');
        let isOpen = false;

        function openMenu() {
            // Open menu - fade in
            mobileMenu?.style.setProperty('opacity', '1');
            mobileMenu?.style.setProperty('pointer-events', 'auto');
            
            // Prevent body scrolling
            document.body.style.overflow = 'hidden';
            
            // Animate burger to X
            if (menuLines) {
                menuLines[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
                menuLines[1].style.opacity = '0';
                menuLines[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
            }
            isOpen = true;
        }

        function closeMenu() {
            // Close menu - fade out
            mobileMenu?.style.setProperty('opacity', '0');
            mobileMenu?.style.setProperty('pointer-events', 'none');
            
            // Restore body scrolling
            document.body.style.overflow = '';
            
            // Reset burger lines
            if (menuLines) {
                menuLines[0].style.transform = 'rotate(0deg) translate(0, 0)';
                menuLines[1].style.opacity = '1';
                menuLines[2].style.transform = 'rotate(0deg) translate(0, 0)';
            }
            isOpen = false;
        }

        // Burger button click
        mobileMenuButton?.addEventListener('click', function() {
            if (isOpen) {
                closeMenu();
            } else {
                openMenu();
            }
        });

        // Close button click
        mobileMenuClose?.addEventListener('click', function() {
            closeMenu();
        });

        // Close menu when clicking on a link
        const mobileLinks = mobileMenu?.querySelectorAll('a');
        mobileLinks?.forEach(link => {
            link.addEventListener('click', function() {
                closeMenu();
            });
        });
    });
</script>