---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="404 - Page Not Found | Angus Quigley">
    <div class="fade-in-on-load min-h-screen flex flex-col justify-center items-center bg-white px-4">
        <div class="text-center max-w-md mx-auto">
            <h1 class="font-serif text-8xl md:text-9xl font-bold text-main mb-4">
                404
            </h1>
            <h2 class="font-serif text-2xl md:text-3xl font-bold text-main mb-6">
                Page Not Found
            </h2>
            <p class="text-lg text-gray-600 mb-8">
                The page you're looking for doesn't exist.
            </p>
            <a href="/" class="inline-block bg-gray-800 text-white font-bold py-3 px-8 rounded-full hover:bg-main transition-all text-base shadow-lg hover:shadow-xl">
                Back to Home
            </a>
        </div>
    </div>
</BaseLayout>
