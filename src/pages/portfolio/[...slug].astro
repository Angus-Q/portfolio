---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const portfolio = await getCollection('portfolio');
  return portfolio.map((project) => ({
    params: { slug: project.slug }
  }));
}

const { slug } = Astro.params;
const entry = await getEntry('portfolio', slug!);
if (!entry) throw new Error('Portfolio project not found');

const rendered = await entry.render();
const { Content } = rendered;
const data = entry.data;
---
<BaseLayout title={`${data.title} | Angus Quigley`} description={data.description ?? ''}>
  <article class="py-16 fade-in">
    <header class="mb-12 pb-8 border-b border-gray-200">
      <h1 class="text-4xl font-display font-light leading-tight mb-6 relative">
        {data.title}
      </h1>
      {data.description && (
        <p class="text-lg text-gray-600 leading-relaxed mb-6">
          {data.description}
        </p>
      )}
    </header>
    
    <div class="prose prose-lg max-w-none fade-in-up" style="animation-delay: 0.8s;">
      <Content />
    </div>
    
    <footer class="mt-16 pt-8 border-t border-gray-200 fade-in-up" style="animation-delay: 1.2s;">
      <nav class="flex justify-center items-center text-sm">
        <a href="/portfolio" class="clean-underline text-gray-600 hover:text-gray-900">
          ‚Üê back to portfolio
        </a>
      </nav>
    </footer>
  </article>
</BaseLayout>
