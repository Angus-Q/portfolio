---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Angus Quigley | Mechatronics Engineer" description="Designer/Developer portfolio and newsletter" heroMode={true} isHomepage={true}>
  <!-- Full Screen Hero -->
  <section class="fixed inset-0 w-full h-screen bg-black text-white overflow-hidden">
    <!-- Background image with right alignment and fade-in animation -->
    <img 
      src="/images/angus1.jpg" 
      alt="Angus Quigley Portrait" 
      class="absolute inset-0 w-full h-full object-cover object-right animate-fade-in"
      style="object-position: right center;"
    />
    
    <!-- Text and navigation overlay -->
    <div class="absolute inset-0 flex items-center">
      <div class="container mx-auto px-4 max-w-5xl w-full relative">
        <div class="max-w-4xl relative">
          <!-- Main heading with responsive sizing -->
          <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl leading-none mb-4 relative lowercase text-white animate-fade-in-up scroll-fade select-none pointer-events-none mix-blend-screen">
            <span class="block relative break-words">angus quigley</span>
          </h1>
          <div class="relative z-20">
            <div>
              <p class="text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-display opacity-90 relative z-10 lowercase text-white mb-8 animate-fade-in-up-delay scroll-fade">
                mechatronics engineer
              </p>
            
              <!-- Horizontal navigation menu -->
              <nav class="relative z-20 animate-fade-in-left scroll-fade" id="nav-menu">
                <ul class="flex flex-wrap gap-4 sm:gap-6 md:gap-8 items-center">
                  <li class="animate-fade-in-left-stagger">
                    <div class="nav-item p-2 transition-all duration-300 cursor-pointer group" data-href="/about" data-index="0">
                      <div class="font-display text-sm">
                        <span class="text-white relative">
                          about
                          <span class="absolute -bottom-1 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"></span>
                        </span>
                      </div>
                    </div>
                  </li>
                  <li class="animate-fade-in-left-stagger">
                    <div class="nav-item p-2 transition-all duration-300 cursor-pointer group" data-href="/portfolio" data-index="1">
                      <div class="font-display text-sm">
                        <span class="text-white relative">
                          portfolio
                          <span class="absolute -bottom-1 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"></span>
                        </span>
                      </div>
                    </div>
                  </li>
                  <li class="animate-fade-in-left-stagger">
                    <div class="nav-item p-2 transition-all duration-300 cursor-pointer group" data-href="/contact" data-index="2">
                      <div class="font-display text-sm">
                        <span class="text-white relative">
                          contact
                          <span class="absolute -bottom-1 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"></span>
                        </span>
                      </div>
                    </div>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    /* No custom nav item styles needed - using Tailwind classes */
  </style>

  <script>
    const navItems = document.querySelectorAll('.nav-item');
    
    // Mouse navigation with page transitions
    navItems.forEach((item) => {
      item.addEventListener('click', () => {
        const href = item.getAttribute('data-href');
        if (href) {
          // Mark that we're coming from the index page
          sessionStorage.setItem('fromIndex', 'true');
          
          const transition = document.getElementById('pageTransition');
          if (transition) {
            // Set transition to white (light theme) since we're going to light pages
            transition.classList.remove('dark');
            transition.classList.add('active');
            setTimeout(() => {
              window.location.href = href;
            }, 200);
          } else {
            window.location.href = href;
          }
        }
      });
    });

    // Scroll fade effect
    let lastScrollY = 0;
    const scrollElements = document.querySelectorAll('.scroll-fade');
    
    function handleScroll() {
      const currentScrollY = window.scrollY;
      const scrollDirection = currentScrollY > lastScrollY ? 'down' : 'up';
      const scrollDistance = Math.abs(currentScrollY - lastScrollY);
      
      scrollElements.forEach(element => {
        if (scrollDistance > 50) {
          element.classList.add('fade-out');
        } else {
          element.classList.remove('fade-out');
        }
      });
      
      lastScrollY = currentScrollY;
    }
    
    window.addEventListener('scroll', handleScroll, { passive: true });
  </script>
</BaseLayout>
