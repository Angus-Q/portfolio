---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHeader from '../components/PageHeader.astro';
---
<BaseLayout title="Contact - Angus Quigley">
  <PageHeader title="Get In Touch" subtitle="I'm always looking for interesting challenges. If you have a project in mind, or just want to connect, feel free to reach out." />
  <section class="py-20 md:py-24 bg-white">
    <div class="container mx-auto px-4 max-w-6xl"><div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div class="contact-content">
          <h2 class="font-serif text-3xl font-bold text-main mb-6">Send a Message</h2>
          <form id="contact-form" action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
            <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div><label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label><input type="text" name="name" id="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-accent-red focus:border-accent-red"></div>
              <div><label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label><input type="email" name="email" id="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-accent-red focus:border-accent-red"></div>
            </div>
            <div><label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label><textarea name="message" id="message" rows="6" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-accent-red focus:border-accent-red"></textarea></div>
            <div class="text-left"><button id="submit-button" type="submit" class="bg-accent-red text-white font-bold py-3 px-8 rounded-full hover:bg-hover-accent-red transition-all text-base shadow-lg hover:shadow-xl">Send Message</button></div>
          </form>
          <div id="form-result" class="mt-4 text-lg font-medium"></div>
        </div>
        <div class="about-content">
          <h2 class="font-serif text-3xl font-bold text-main mb-6">Contact Details</h2>
          <div class="space-y-4 text-gray-600">
            <p class="flex items-center"><i class="fas fa-map-marker-alt w-6 text-accent-red"></i><span>Christchurch, New Zealand</span></p>
            <p class="flex items-center"><i class="fas fa-envelope w-6 text-accent-red"></i><a href="mailto:hello@angusq.com" class="hover:text-accent-red">hello@angusq.com</a></p>
            <p class="flex items-center"><i class="fab fa-linkedin w-6 text-accent-red"></i><a href="https://www.linkedin.com/in/angusq" target="_blank" rel="noopener noreferrer" class="hover:text-accent-red">linkedin.com/in/angusq</a></p>
            <p class="flex items-center"><i class="fab fa-github w-6 text-accent-red"></i><a href="https://github.com/Angus-Q" target="_blank" rel="noopener noreferrer" class="hover:text-accent-red">github.com/Angus-Q</a></p>
            <p class="flex items-center"><i class="fab fa-youtube w-6 text-accent-red"></i><a href="https://www.youtube.com/@angusq" target="_blank" rel="noopener noreferrer" class="hover:text-accent-red">youtube.com/@angusq</a></p>
          </div>
        </div>
    </div></div>
  </section>
</BaseLayout>
<script src="../scripts/contact-form.js"></script>