---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" type="image/png" href="/favicon.png" />
    <style is:global>
        @import '../styles/global.css';
        html { background-color: #ffffff; }
        body { background-color: #ffffff; color: #111827; font-family: 'Inter', sans-serif; overflow-x: hidden; }
        .link-underline { position: relative; text-decoration: none; transition: color 0.25s ease-out; }
        .link-underline::after { content: ''; position: absolute; width: 100%; transform: scaleX(0); height: 1px; bottom: -2px; left: 0; background-color: #1d1e22; transform-origin: bottom right; transition: transform 0.25s ease-out; }
        .link-underline:hover::after { transform: scaleX(1); transform-origin: bottom left; }

        .link-underline-white { position: relative; text-decoration: none; transition: color 0.25s ease-out; }
        .link-underline-white::after { content: ''; position: absolute; width: 100%; transform: scaleX(0); height: 1px; bottom: -2px; left: 0; background-color: white; transform-origin: bottom right; transition: transform 0.25s ease-out; }
        .link-underline-white:hover::after { transform: scaleX(1); transform-origin: bottom left; }

        /* General fade-in for single content blocks */
        .fade-in-on-load {
            animation: fadeInAnimation 1s ease-out forwards;
        }
        @keyframes fadeInAnimation {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* NEW: Staggered fade-in for list items */
        @keyframes staggerFadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .stagger-item {
            opacity: 0;
            transform: translateY(20px);
            animation: staggerFadeIn 0.5s ease-out forwards;
        }
        /* Apply a different delay to the first 8 items in a list */
        .stagger-item:nth-child(1) { animation-delay: 0.1s; }
        .stagger-item:nth-child(2) { animation-delay: 0.2s; }
        .stagger-item:nth-child(3) { animation-delay: 0.3s; }
        .stagger-item:nth-child(4) { animation-delay: 0.4s; }
        .stagger-item:nth-child(5) { animation-delay: 0.5s; }
        .stagger-item:nth-child(6) { animation-delay: 0.6s; }
        .stagger-item:nth-child(7) { animation-delay: 0.7s; }
        .stagger-item:nth-child(8) { animation-delay: 0.8s; }
    </style>
</head>
<body class="antialiased">
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>