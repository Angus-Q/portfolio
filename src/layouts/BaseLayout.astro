---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style is:global>
        @import '../styles/global.css';
        html { background-color: #ffffff; }
        body { background-color: #ffffff; color: #111827; font-family: 'Inter', sans-serif; overflow-x: hidden; }
        .link-underline { position: relative; text-decoration: none; transition: color 0.25s ease-out; }
        .link-underline::after { content: ''; position: absolute; width: 100%; transform: scaleX(0); height: 1px; bottom: -2px; left: 0; background-color: #111827; transform-origin: bottom right; transition: transform 0.25s ease-out; }
        .link-underline:hover::after { transform: scaleX(1); transform-origin: bottom left; }

        /* Simple CSS fade-in animation for list pages */
        .simple-fade-in {
            animation: fadeInAnimation 1s ease-out forwards;
        }
        @keyframes fadeInAnimation {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
</head>
<body class="antialiased">
    <Header />
    <main class="pt-20">
        <slot />
    </main>
    <Footer />
    {/* Removed the global animation script */}
</body>
</html>